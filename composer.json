{
    "name": "jc-it/yii2-language-picker",
    "description": "Language picker component and widget",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joey Claessen",
            "email": "joey_claessen@hotmail.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.0",

        "lajax/yii2-translate-manager": "^1.8.1",
        "rinvex/countries": "^8.1.0",
        "yiisoft/yii2": "~2.0.42"
    },
    "require-dev": {
        "captainhook/plugin-composer": "^5.3",
        "phpstan/phpstan": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpunit/phpunit": "^9.5",
        "ramsey/conventional-commits": "^1.3",
        "symfony/console": "^5.4.2",
        "symplify/easy-coding-standard": "^10.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "JCIT\\i18n\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JCIT\\i18n\\tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs",
        "lint-fix": "vendor/bin/ecs --fix",
        "test": "vendor/bin/phpunit --coverage"
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true,
            "phpstan/extension-installer": true,
            "yiisoft/yii2-composer": true
        }
    }
}
